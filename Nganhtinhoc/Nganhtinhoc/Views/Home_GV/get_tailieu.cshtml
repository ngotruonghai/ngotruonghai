@model PagedList.IPagedList<Nganhtinhoc.Models.Tailieu>
@using PagedList.Mvc;
@{
    ViewBag.Title = "get_tailieu";
    Layout = "~/Views/Shared/layout_GV.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<div class="container">
    <div class="row">
        <div class="col-lg-12" style="margin-top:15px">
            <table class="table table-primary table-hover">
                <thead>
                    <tr>
                        <th>Tên Tài Liệu</th>
                        <th>File</th>
                        <th>Hiển Thị</th>
                        <th>Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.tentailieu</td>
                            <td>@i.file</td>
                            <td>@i.hide</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @foreach (var i in Model)
    {
        @Html.PagedListPager(Model, page => Url.Action("get_tailieu", new { page, ma = i.magiaovien }))
        break;
    }
</div>
