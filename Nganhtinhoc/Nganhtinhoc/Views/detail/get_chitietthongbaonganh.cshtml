@model IEnumerable<Nganhtinhoc.Models.Thongbao>

@{
    ViewBag.Title = "get_chitietthongbaonganh";
    Layout = "~/Views/Shared/detail_layout.cshtml";
}
<div class="single_post_content">
    <h2 style="margin-top:25px;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"><span>Thông Báo Trường</span></h2>
    <div class="container">
        @foreach (var i in Model)
        {
            <h2 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;text-align:center"><strong>@i.tieude</strong></h2>
            <div class="col-lg-12 col-md-12 col-sm-12">
                @Html.Raw(i.vanban)
            </div>
        }
        @*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("get_chitietTBT", new { page }))*@
    </div>
</div>