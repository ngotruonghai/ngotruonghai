@model PagedList.IPagedList<Nganhtinhoc.Models.Tailieu>
@using PagedList.Mvc

@{
    ViewBag.Title = "get_tailieu";
    Layout = "~/Views/Shared/detail_layout.cshtml";
}
<div class="single_post_content">
    <h2 style="margin-top:25px;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"><span>Tài Liệu</span></h2>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @foreach (var i in Model)
                {
                   <div class="row">
                       <div class="col-lg-12 col-sm-12" style="border-bottom:dashed 1.5px">
                               <div class="col-lg-1 col-md-1 col-sm-1" style="margin-top:25px"><span class="glyphicon glyphicon-hand-right"></span></div>
                               <div class="col-lg-11 col-md-11 col-sm-11">
                                   <div class="media-body"> <a class="catg_title"><h2 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;text-align:center"><strong>@i.tentailieu</strong></h2></a> </div>
                                   <div class="row">
                                       <div class="col-lg-12 col-md-12 col-sm-12">
                                               <p><strong><h4>Ghi chú:</h4></strong></p>
                                               <p>@Html.Raw(@i.text)</p>
                                               <p><strong><h4>file: </h4></strong></p>  
                                               <p>
                                                   <a href="~/Content/upload/img/file/Assignment.docx">.@i.tentailieu</a>
                                               </p>
                                       </div> 
                                   </div>
                                   <p style="float:right">Tên GV:   @Html.Action("get_tengiaovien", "menu",new { ma=@i.magiaovien})</p>
                               </div>
                       </div>
                   </div>
                   <hr />
                }
            </div>
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("get_tailieu", "menu", new { page }))
        </div>
    </div>
    <div class="row" style="border:solid 1px">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div id="fb-root"></div>
            <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v5.0"></script>
            <div class="fb-comments" data-href="http://localhost:56530/tai_lieu" data-width="" data-numposts="10"></div>
        </div>
    </div>
</div>