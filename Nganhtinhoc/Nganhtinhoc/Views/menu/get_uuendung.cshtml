@model PagedList.IPagedList<Nganhtinhoc.Models.Tuyendung>
@using PagedList.Mvc

@{
    ViewBag.Title = "get_uuendung";
    Layout = "~/Views/Shared/detail_layout.cshtml";
}
<div class="single_post_content">
    <h2 style="margin-top:25px;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"><span>Tuyển dụng</span></h2>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @foreach (var i in Model)
                {
                    <div class="col-lg-3 col-sm-3">
                        <a href="/tuyen_dung/@i.meta"><img src="~/Content/upload/img/tuyendung/@i.img" class="img-thumbnail" />@i.tieude</a>
                    </div>
                }
            </div>
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("get_uuendung", "menu", new { page }))
        </div>
    </div>
    </div>
