@model IEnumerable<Nganhtinhoc.Models.Thongbao>
@foreach (var i in Model)
{
    <li>
       <div class="col-lg-12 col-md-12 col-sm-12" style="margin-bottom:15px">
           <div class="col-lg-4 col-md-4 col-sm-4"><img src="~/Content/upload/img/thongbao/@i.img" class="img-thumbnail"/></div>
           <div class="col-lg-8 col-md-8 col-sm-8">
               <figure class="bsbig_fig">
                   <figcaption> <a href="/thong-bao-nganh/@i.meta"><h4 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"><span class="glyphicon glyphicon-hand-right"></span>  @i.tieude</h4></a></figcaption>
                   <p style="margin-left:250px">@i.ngay</p>
               </figure>
           </div>
       </div>
    </li>
}