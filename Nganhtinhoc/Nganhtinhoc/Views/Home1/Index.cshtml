</section>
<section id="sliderSection">
    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8">
            <div class="slick_slider">
                @Html.Action("get_thongbao", "Home1")
            </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4">
                <div class="latest_post">
                    <h2><span><strong style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Thông Báo Trường</strong></span></h2>
                    <div class="latest_post_container">
                        <div id="prev-button"><i class="fa fa-chevron-up"></i></div>
                        <ul class="latest_postnav" style="height: 192px; overflow: hidden;">
                            @Html.Action("get_thongbaotruong", "Home1")
                        </ul>
                        <div id="next-button"><i class="fa  fa-chevron-down"></i></div>
                    </div>
                </div>
            </div>
        </div>
</section>
<section id="contentSection">
    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8">
            <div class="left_content">
                <div class="single_post_content">
                    <h2 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"><span>Thông Báo Ngành</span></h2>
                    <div >
                        <ul class="business_catgnav  wow fadeInDown">
                           @Html.Action("get_thongbaonganh", "Home1")

                        </ul>
                    </div>
                </div>
                
                <div class="single_post_content">
                    <h2 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"><span>Tuyển Dụng</span></h2>
                        @Html.Action("get_tuyendung", "Home1")
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            <aside class="right_content">
                <div class="single_sidebar">
                    <h2><span style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"><strong>Tài liệu sinh viên</strong></span></h2>
                    <ul class="spost_nav">
                       @Html.Action("get_tailieu", "Home1")
                    </ul>
                </div>
            </aside>
        </div>
    </div>
</section>