@model Nganhtinhoc.Models.Diemsinhvien

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admin/Views/Shared/admin_layout.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
@using (Html.BeginForm("Create", "Diemsinhviens", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-sm-6 col-md-6">
                <img src="~/Content/ing_ero/sinhvien/logotdt.png" class="img-responsive" style="float:left;" />
            </div>
            <div class="col-lg-8 col-sm-6 col-md-6">
                <h1 style="text-align:left;color:#36b9cc;margin-top:25px"><strong>Thêm điểm</strong></h1>
            </div>
        </div>
        <hr />
    </div>
    <div class="container">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.masinhvien, "masinhvien", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input name="m" value="@ViewBag.id" />
                    @Html.ValidationMessageFor(model => model.masinhvien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.monhoc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.monhoc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.monhoc, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-lg-12">
                <div class="row" style="text-align:center">
                    <div class="col-lg-3">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">HS1</font></font></h6>
                            </div>
                            <div class="card-body">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        <input type="number" name="s1"
                                               min="1" max="10" required />
                                        @Html.ValidationMessageFor(model => model.dieml1, "", new { @class = "text-danger" })
                                    </font>
                                </font>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">HS2 lần 1</font></font></h6>
                            </div>
                            <div class="card-body">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        <input type="number" name="s21"
                                               min="1" max="10" required />
                                        @Html.ValidationMessageFor(model => model.dieml2, "", new { @class = "text-danger" })
                                    </font>
                                </font>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">HS2 lần 2</font></font></h6>
                            </div>
                            <div class="card-body">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        <input type="number" name="s22"
                                               min="1" max="10" required />
                                        @Html.ValidationMessageFor(model => model.dieml3, "", new { @class = "text-danger" })
                                    </font>
                                </font>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Thi</font></font></h6>
                            </div>
                            <div class="card-body">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        <input type="number" name="t"
                                               min="1" max="10" required />
                                        @Html.ValidationMessageFor(model => model.dieml4, "", new { @class = "text-danger" })
                                    </font>
                                </font>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Quay lại", "get_detaildiem", "Sinhviens", new { id = ViewBag.id }, new { @class = "btn btn-primary" })
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}
