@model IEnumerable<Nganhtinhoc.Models.Sinhvien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/admin_layout.cshtml";
}
<p>
    @Html.ActionLink("Thêm mới", "Create", "Sinhviens")
</p>
<div class="card-body">
    <div class="table-responsive">
        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="col-sm-12">
                <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                    <thead>
                        <tr role="row">
                            <th style="width:50px">Mã SV</th>
                            <th style="width:150px">Tên SV</th>
                            <th style="width:50px">PassWordk</th>
                            <th style="width:120px">Ngành</th>
                            <th style="width:100px">Chức năng</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr role="row" class="odd">
                                <td class="sorting_1"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@i.masinhvien</font></font></td>
                                @*<td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"><img src="~/Content/upload/img/thongbao/@i.img" width="100px" /></font></font></td>*@
                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@i.tensinhvien</font></font></td>
                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@i.pass</font></font></td>
                                <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@i.Nganh.tennganh</font></font></td>
                                @*<td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@(i.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")</font></font></td>*@
                                <td>
                                    <font style="vertical-align: inherit;">
                                        <font style="vertical-align: inherit;">
                                            @Html.ActionLink(" ", "Edit", new { id = i.masinhvien }, new { @class = "fas fa-pen", @Style = "color:	#00BFFF;" })@*&ensp;&ensp;*@
                                            @Html.ActionLink(" ", "Details", new { id = i.masinhvien }, new { @class = "fas fa-eye", @Style = "color:#0033CC	;" })@*&ensp;&ensp;*@
                                            @Html.ActionLink(" ", "Delete", new { id = i.masinhvien }, new { @class = "fas fa-trash", @Style = "color:#980000 	;" })
                                            @Html.ActionLink(" ", "get_detailDiem", "Sinhviens", new { @*msv = i.masinhvien, ten = i.tensinhvien*@id=i.masinhvien }, new { @class = "fas fa-address-card" })
                                        </font>
                                    </font>
                                </td>
                                @*<td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">$ 34.000</font></font></td>*@
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
