@model IEnumerable<Nganhtinhoc.Models.Sinhvien>

@{
    ViewBag.Title = "get_detaildiem";
    Layout = "~/Areas/admin/Views/Shared/admin_layout.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-sm-6 col-md-6">
            <img src="~/Content/ing_ero/sinhvien/logotdt.png" class="img-responsive" style="float:left;" />
        </div>
        <div class="col-lg-8 col-sm-6 col-md-6">
            <h1 style="text-align:left;color:#36b9cc;margin-top:25px"><strong>Điểm Sinh Viên</strong></h1>
        </div>
    </div>
    <hr />
</div>
<div class="container">
    @foreach (var i in Model)
    {
        <div class="col-lg-12">
            <!-- Dropdown Card Example -->
            <!-- Card Header - Dropdown -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h4 class="m-0 font-weight-bold text-primary" style="text-align:center">Thông Tin Sinh Viên</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6 col-sm-6 col-md-6">
                            <p><strong>Mã sinh viên:</strong> @i.masinhvien</p>
                            <p><strong>Tên sinh viên:</strong> @i.tensinhvien</p>
                            <p><strong>Khóa học:</strong> @i.Nganh.khoahoc</p>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-md-6">
                            <p><strong>Mã ngành:</strong> @i.Nganh.manganh</p>
                            <p><strong>Ngành học:</strong> @i.Nganh.tennganh</p>
                        </div>
                    </div>

                </div>
            </div>
            <!-- Card Body -->

        </div>
        @Html.Action("Index", "Diemsinhviens",new {id=i.masinhvien,sv=i.tensinhvien })
        break;
    }
</div>